<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.gbmoro.diiin">

    <application
        android:name="diiin.DindinApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="diiin.ui.activity.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="diiin.ui.activity.InsertExpenseActivity"
            android:label="@string/title_newexpense">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diiin.ui.activity.MainActivity" />
        </activity>
        <activity
            android:name="diiin.ui.activity.InsertSalaryActivity"
            android:label="@string/title_newsalary">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diiin.ui.activity.MainActivity" />
        </activity>
        <activity android:name="diiin.ui.activity.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diiin.ui.activity.MainActivity" />
        </activity>
        <activity android:name="diiin.ui.activity.InsertExpenseTypeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diiin.ui.activity.SettingsActivity" />
        </activity>
    </application>

</manifest>